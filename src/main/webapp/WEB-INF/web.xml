    <filter>
        <filter-name>jsp</filter-name>
        <filter-class>filter.JspFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>jsp</filter-name>
        <url-pattern>*.jsp</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>429</error-code>
        <location>/WEB-INF/jsp/error/429.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jsp/error/500.jsp</location>
    </error-page>
    <error-page>
        <location>/WEB-INF/jsp/error/error.jsp</location>
    </error-page>

    <context-param>
        <param-name>html</param-name>
        <param-value>/WEB-INF/html</param-value>
    </context-param>
    <context-param>
        <param-name>lyt</param-name>
        <param-value>/WEB-INF/jsp/layout</param-value>
    </context-param>
    <context-param>
        <param-name>cpnt</param-name>
        <param-value>/WEB-INF/jsp/component</param-value>
    </context-param>
    <context-param>
        <param-name>img</param-name>
        <param-value>/img</param-value>
    </context-param>
    <context-param>
        <param-name>home</param-name>
        <param-value>/</param-value>
    </context-param>
    <context-param>
        <param-name>writeup</param-name>
        <param-value>/writeup</param-value>
    </context-param>
    <context-param>
        <param-name>overthewire</param-name>
        <param-value>/writeup/overthewire</param-value>
    </context-param>
    <context-param>
        <param-name>bandit</param-name>
        <param-value>/writeup/overthewire/bandit/?level=</param-value>
    </context-param>
    <context-param>
        <param-name>natas</param-name>
        <param-value>/writeup/overthewire/natas/?level=</param-value>
    </context-param>
    <context-param>
        <param-name>leviathan</param-name>
        <param-value>/writeup/overthewire/leviathan</param-value>
    </context-param>
    <context-param>
        <param-name>vulnhub</param-name>
        <param-value>/writeup/vulnhub</param-value>
    </context-param>
    <context-param>
        <param-name>tool</param-name>
        <param-value>/tool</param-value>
    </context-param>
</web-app>
